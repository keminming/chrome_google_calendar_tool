{
  "name": "Calendar++",
  "version": "1.4",
  "manifest_version": 2,
  "description": "Add event to Google Calendar by Chrome Extension",
  "browser_action": {
    "default_title": "Open the popup",
    "default_icon": "icon-16.png",
    "default_popup" : "popup.html"
  },
  "icons": {
    "46" : "icon-46.jpg",
    "128" : "icon-128.png"
  },
  "background": 
  { 
	"scripts": ["contextMenus.js","calendar.js","scheduler.js","dateTime.js"]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*","https://*/*"],
	  "css":["DateTimePicker.css","content_script.css"],
      "js": ["jquery-1.11.1.min.js","DateTimePicker.js","content_script.js"]
    }
  ],
  "permissions": ["identity","*://apis.google.com/*","contextMenus","tabs"],
  "oauth2": {
    "client_id": "206855820890-ph06p7tufqse0hbdf8vmu36oohb6numf.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/calendar"
    ]
  },
  "web_accessible_resources": [
    "*.png"
  ],
  "content_security_policy": "script-src 'self' https://*.google.com; object-src 'self'"
}